<%= render 'users/info', user: @user, book: @book1 %>

<h1>Books detail</h1>

<%= image_tag @book.user.get_profile_image(100,100) %>
<p><%= @book.user.name %></p>
<p><%= @book.title %></p>
<p><%= @book.body %></p>

<% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book) %>
  <%= link_to "Destroy", book_path(@book), method: :delete %>
<% end %>
