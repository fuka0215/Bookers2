<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.name %></h3>
  <h5><%= @user.introduction %></h5>
  <p><%= link_to "プロフ編集", edit_user_path(@user) %></p>
</div>


<h1>Books</h1>
  <% @books.each do |book| %>
  <div>
    <%= image_tag @user.get_profile_image(100,100) %>
    <p><%= link_to book.title, book_path(book.id) %></p>
    <p><%= book.body %></p>
  </div>
  <% end %>

