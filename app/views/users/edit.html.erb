<h1>User info</h1>
<!-- ユーザー編集画面-->
<% if @user.errors.any? %>
  <h4><%= @user.errors.count %> errors prohibited this obj from being saved:</h4>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="user_name">Name</label><br>
  <%= f.text_field :name %><br>
  <label for="user_image">Image</label><br>
  <%= f.file_field :profile_image, placeholder: "profile", accept: "image/*" %><br>
  <label for="user_introduction">Introduction</label><br>
  <%= f.text_area :introduction %><br>
  <%= f.submit "Update User" %>

<% end %>
