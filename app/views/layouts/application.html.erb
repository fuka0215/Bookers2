<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/3224147d81.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <span>
          <%= link_to 'Bookers', root_path %>
        </span>
      <% if user_signed_in? %>
        <li>
          <%= link_to user_path(current_user.id) do %>
            <span><i class="fa-solid fa-house"></i>Home</span>
          <% end %>
        </li>
        <li>
          <%= link_to users_path do %>
            <span><i class="fa-solid fa-users"></i>Users</span>
          <% end %>
        </li>
        <li>
          <%= link_to books_path do %>
            <span><i class="fa-solid fa-book-open"></i>Books</span>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <span><i class="fa-solid fa-right-from-bracket"></i>Log out</span>
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to root_path do %>
            <span><i class="fa-solid fa-house"></i>Home</span>
          <% end %>
        </li>
        <li>
          <%= link_to about_path do %>
            <span><i class="fa-solid fa-link"></i>About</span>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_registration_path do %>
            <span><i class="fa-solid fa-user-plus"></i>Sign up</span>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_session_path do %>
            <span><i class="fa-solid fa-right-to-bracket"></i>Log in</span>
          <% end %>
        </li>
      <% end %>
    </header>
    <main>
      <div>
        <% flash.each do |message_type, message| %>
          <div class="flash-message <%= message_type %>"><%= message %></div>
        <% end %>
      </div>
    <%= yield %>
    </main>
    <footer>
      <div>
        <div>
          <div>
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
